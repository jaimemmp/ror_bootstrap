<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @movie.duration %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @movie.synopsis %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Categories:</strong>
  <%= @movie.categories %>
</p>

<p>
  <strong>Comments:</strong>
  <hr>
  <% @movie.comments.each do |comment| -%>
    <p>
        <%= comment.body %>
        <br><%= comment.author %>
        <hr>
    </p>
<% end -%>
</p>

