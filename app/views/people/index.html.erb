<h1>Listing People</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.try(:name) %></td>
        <td><%= person.try(:role) %></td>
        <td>
          <%= link_to 'Edit person', edit_person_path(person) %>
        </td>
        <td>
          <%= link_to 'Delete person', person, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <tr>
    <% end %>
  </tbody>
